      <solid
          android:color="#A70400" />
      <stroke
          android:width="1dp"
          android:color="#992f2f" />
      <corners
          android:radius="10dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
