<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.uniararas.mobile.baladanights.HomeActivity$PlaceholderFragment" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baladas Nights" 
        android:textColor="#34495e"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_centerHorizontal="true"/>
    
    <ListView
        android:id="@+id/main_lista"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_above="@+id/home_botoes">
       
    </ListView>
    
    <ImageView
        android:id="@+id/home_imagen"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />
    
    <LinearLayout
        android:id="@+id/home_botoes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/home_btn_lista_balada"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Listar Baladas" 
            android:drawableTop="@android:drawable/stat_notify_sync"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_home_rosa"/>

        <Button
            android:id="@+id/home_btn_cadastra_balada"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Cadastrar Balada" 
            android:drawableTop="@android:drawable/stat_notify_sdcard_prepare"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_home_verde"/>

        <Button
            android:id="@+id/home_btn_presenca_balada"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="PresenÃ§a Baladas" 
            android:drawableTop="@android:drawable/ic_lock_idle_lock"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_home_laranja"/>
    </LinearLayout>
</RelativeLayout>
